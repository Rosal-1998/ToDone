/* pages/TodoList/TodoList.wxss */
.header {
   background-color: #f2f2f2;
   height:200rpx;
   color: black;
   font-size: x-large;
   border-bottom-left-radius: 10%;
   border-bottom-right-radius: 10%;
   font-weight: 100;
}

.time {
   font-size: medium;
   height: 100%;
}

.popup{
   border-top-left-radius: 10%;
   border-top-right-radius: 10%;
   padding: 30rpx; 
   box-shadow: 2rpx -2rpx 4rpx rgba(0, 0, 0, 0.2);
   
}
.checkbox{
   width: 100%;
}

.taskRow{
   margin-top: 30rpx;
}
.task{
   font-size: 40rpx;
   line-height: 35px;
   font-weight: 300;
   color: black;
}
.taskDone{
   color: #909090;
   text-decoration: line-through;
   
}

.operation{
   font-size: 30rpx;
   color: #909090;
   margin-right: 10rpx;
}